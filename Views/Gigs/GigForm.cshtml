@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>


@using (Html.BeginForm(Model.Action, "Gigs", FormMethod.Post))
{
    <p class="alert alert-info">All field <strong>requierd</strong></p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(g=>g.Id)
    <div class="form-group">
        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control", autofocus="autofocus"})
        @Html.ValidationMessageFor(g=>g.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Date)
        @Html.TextBoxFor(g => g.Date, new { @class = "form-control", placeholder="Ex:  03 Feb 2019" })
        @Html.ValidationMessageFor(g => g.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Time)
        @Html.TextBoxFor(g => g.Time, new { @class = "form-control", placeholder="Ex:  17:30" })
        @Html.ValidationMessageFor(g => g.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Genre)
        @Html.DropDownListFor(g => g.Genre, new SelectList(Model.Genres, "Id", "Name"),
                new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Genre)

    </div>
    <button type="submit" class="btn btn-primary btn-lg">Save</button>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }